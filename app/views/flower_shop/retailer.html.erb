<div class="container-fluid">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<h4>Retailer Name:</h4>
				<h1 class="text-danger"><%= @retailers.name %></h1>
				<h4>Retailer Email-id:</h4>
				<h2 class="text-success"><%= @retailers.emailid %></h2>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<%= form_for @retailers,remote: true do |f| %>
				<select name="wholesale[id]" class="form-control">
				<% @users.each do |usr| %>
				<% usr.roles.where("wholeseller=?",1).each do |ret| %>
				<option value="<%= usr.id%>"><%= usr.name%></option>
				<% end %>
				<% end %>				
				</select>
				<br>
				<div class="form-group">
					<input type="submit" name="" value="SUBMIT" class="btn btn-primary col-lg-12 col-md-12 col-sm-12 col-xs-12" id="submit-button">

				</div>
				<% end %>

			</div>			
		</div>		
		<div class="row">
			<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
				<h1>Customers details</h1>	
				<table class="table table-stripped">
					<thead >
						<tr>
							<th>Name</th>
							<th>Email Id</th>
							<th>Option</th>
						</tr>
					</thead>
					<tbody>
						<% @retailers.customers.each do |cust| %>
						<tr>
							<td><%= cust.name %></td>
							<td><%= cust.emailid %></td>
							<td><%= link_to("Display", {:action=>"customer",:id=>cust.id} , :class=>"btn btn-default") %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
				<h1>Wholeseller details</h1>	
				<table class="table table-stripped">
					<thead >
						<tr>
							<th>Name</th>
							<th>Email Id</th>
							<th>Option</th>
						</tr>
					</thead>
					<tbody class="wholeseller-view">
						<% Wholesale.where("retailer_id=?",params[:id]).each do |whole| %>
						<% wholes=User.find(whole.user_id) %>
						<tr>
							<td><%= wholes.name %></td>
							<td><%= wholes.emailid %></td>
							<td><%= link_to("Display", {:action=>"wholeseller",:id=>wholes.id} , :class=>"btn btn-default") %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>			
		</div>
		<div class="row">
			<%= link_to "Back to Home",{:action=>"index"},:class=>"btn btn-warning col-lg-12 col-md-12 col-sm-12 col-xs-12" %>
			
		</div>
	</div>
</div>
